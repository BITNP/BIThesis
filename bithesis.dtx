%     \item \BIThesisTemplates{UT}
%     \item \BIThesisTemplates{PT}
%     \item \BIThesisTemplates{UTE}
%     \item \BIThesisTemplates{GT} 研究生
%     \item \BIThesisTemplates{GT} 博士生
%   \end{itemize}
