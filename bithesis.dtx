  \seq_clear:N \l_@@_tmp_left_seq
  \seq_map_inline:Nn \l_@@_tmp_right_seq {
    \seq_put_right:Nn \l_@@_tmp_left_seq {}
  }
  \seq_put_left:Nn \l_@@_tmp_left_seq {#1}
