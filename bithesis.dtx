% \end{function}
% 
% \begin{function}{blindPeerReview}
%   \begin{bitsyntax}[emph={[1]blindPeerReview}]
%     blindPeerReview = (*<(false)|true>*)
%   \end{bitsyntax}
%
%   此选项用于输出符合盲审要求的论文。所有可能暴露个人信息的页面都将隐藏，
